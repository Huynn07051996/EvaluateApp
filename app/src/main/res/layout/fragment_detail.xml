<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="DetailActivityViewModel"
            type="com.example.evaluateroom.viewmodel.DetailActivityViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".fragments.detail.DetailFragment">


        <ImageView
            android:id="@+id/imageProductDetail"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_margin="4dp"
            android:scaleType="fitXY" />

        <ProgressBar
            android:id="@+id/pgbDetailFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:emptyDataDetailFragment="@{DetailActivityViewModel.emptyDataDetailFragment}" />

        <TextView
            android:id="@+id/txvPriceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txvTitleDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txvDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>
</layout>